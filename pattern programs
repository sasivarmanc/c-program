5)

A
AB
ABC
ABCD
ABCDE

#include<stdio.h>
int main()
{
    int n;
    printf("Enter n:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
     for(int j=1;j<=i;j){
      printf("%c",'A'+j-1);
     }
     printf("\n");
    }
return 0;
}


6)

*****
****
***
**
*


#include<stdio.h>
int main()
{
    int n;
    printf("Enter n:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
     for(int j=n;j>=i;j--){
      printf("*");
     }
     printf("\n");
    }
return 0;
}




7)

4444
333
22
1

#include<stdio.h>
int main()
{
    int n;
    printf("Enter n:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
     for(int j=n;j>=i;j--){
      printf("%d",n-i+1);
     }
     printf("\n");
    }
return 0;
}


8)

#include<stdio.h>
int main()
{
    int n,a=1;
    printf("Enter n:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
     for(int j=n;j>=i;j--){
      printf(" %d ",a);
      a++;
     }
     printf("\n");
    }
return 0;
}
